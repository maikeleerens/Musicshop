@using  Musicshop.Models
@model Musicshop.Models.Review
@{ User user = (User)Session["User"];}

@using (Html.BeginForm("AddReview", "Product", FormMethod.Post))
{
    @Html.AntiForgeryToken()
        

<div class="col-md-3">
    <div id="review-form">
        <form class="review-form">
            <input class="input" id="userid" name="userid" type="hidden" value="@user.Userid">
            <input class="input" id="Productid" name="productid" type="hidden" value="@Url.RequestContext.RouteData.Values["id"]">
            <textarea class="input" name="message" placeholder="Your Review"></textarea>
            <div class="input-rating">
                <span>Uw beoordeling: </span>
                <div class="stars">
                    <input id="star5" name="rating" value="1" type="radio"><label for="star5"></label>
                    <input id="star4" name="rating" value="2" type="radio"><label for="star4"></label>
                    <input id="star3" name="rating" value="3" type="radio"><label for="star3"></label>
                    <input id="star2" name="rating" value="4" type="radio"><label for="star2"></label>
                    <input id="star1" name="rating" value="5" type="radio"><label for="star1"></label>
                </div>
            </div>
            @if (Session["User"] != null)
            {
                <input type="submit" class="primary-btn" value="Submit" />
            }
            else
            {
                <div><h5>U moet eerst inloggen om een beoordeling te kunnen geven!</h5></div>
            }

        </form>
    </div>
</div>
}